<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PadillaGExamenP3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PadillaGExamenP3"
    Shell.FlyoutBehavior="Disabled"
    Title="PadillaGExamenP3">

    <TabBar>
        <ShellContent
            Title="Registrar"
            Icon="register.png"
            ContentTemplate="{DataTemplate views:RegisterPage}" />

        <ShellContent
            Title="Clientes"
            Icon="clients.png"
            ContentTemplate="{DataTemplate views:ClientsListPage}" />

        <ShellContent
            Title="Logs"
            Icon="logs.png"
            ContentTemplate="{DataTemplate views:LogsPage}" />
    </TabBar>

</Shell>
